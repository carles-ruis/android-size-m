<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background">

    <Spinner
        android:id="@+id/spinner_sizes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/body_image"
        android:layout_margin="@dimen/common_margin" />
    <!--android:layout_toLeftOf="@+id/body_image"/>-->

    <FrameLayout
        android:id="@+id/body_image"
        android:layout_width="180dp"
        android:layout_height="360dp"
        android:layout_centerInParent="true">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/access_img_women_body"
            android:scaleType="fitCenter"
            android:src="@drawable/img_woman_sizes" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/item_size_bust"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/item_size_waist"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="@dimen/size_by_gender_bust_waist_separation"
                android:layout_marginRight="@dimen/size_by_gender_text_women_margin"
                android:background="@color/size_by_gender_textbox"
                android:padding="@dimen/size_by_gender_text_padding"
                android:textColor="@color/size_by_gender_text"
                android:textSize="@dimen/size_by_gender_text"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/item_size_waist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/anchor"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="@dimen/size_by_gender_women_waist_offset"
                android:layout_marginRight="@dimen/size_by_gender_text_women_margin"
                android:background="@color/size_by_gender_textbox"
                android:padding="@dimen/size_by_gender_text_padding"
                android:textColor="@color/size_by_gender_text"
                android:textSize="@dimen/size_by_gender_text"
                android:textStyle="bold" />

            <View
                android:id="@+id/anchor"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_centerVertical="true" />

            <TextView
                android:id="@+id/item_size_hip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/anchor"
                android:layout_marginRight="@dimen/size_by_gender_text_women_margin"
                android:layout_marginTop="@dimen/size_by_gender_hip_offset"
                android:background="@color/size_by_gender_textbox"
                android:padding="@dimen/size_by_gender_text_padding"
                android:textColor="@color/size_by_gender_text"
                android:textSize="@dimen/size_by_gender_text"
                android:textStyle="bold" />

        </RelativeLayout>
    </FrameLayout>

    <TextView
        android:id="@+id/item_footer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/common_margin"
        android:text="@string/footer_units_of_measure"
        android:textColor="@color/size_by_gender_footer"
        android:textSize="@dimen/size_by_gender_footer" />

</RelativeLayout><!-- From: file:/C:/Users/Carles/AndroidStudioProjects/SizeMatters/sizeMatters/src/main/res/layout/fragment_size_women.xml -->