<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/help_content"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@color/help_background"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp" >

        <TextView
            android:id="@+id/help_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/help_title"
            android:textSize="@dimen/help_title" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/help_divider" />

        <TextView
            android:id="@+id/help_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/help_message"
            android:textSize="@dimen/help_message" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/help_divider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="10" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:gravity="right"
                android:text="@string/help_abbreviatures"
                android:textColor="@color/help_message"
                android:textSize="@dimen/help_message" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:gravity="left"
                android:text="@string/help_countries"
                android:textColor="@color/help_message"
                android:textSize="@dimen/help_message" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/help_note"
            android:textColor="@color/help_note"
            android:textSize="@dimen/help_note" />
    </LinearLayout>

</RelativeLayout><!-- From: file:/C:/Users/Carles/AndroidStudioProjects/SizeMatters/sizeMatters/src/main/res/layout/dialog_help.xml -->